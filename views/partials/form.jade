.container
  .row
    .col-lg-4.col-lg-offset-4.col-xs-6.col-xs-offset-3
      form
        if path.includes('signup')
          .form-group
            label(for="name") Name
            input#name.form-control(type="text" name="name" required)
        .form-group
          label(for="email") Email
          input#email.form-control(type="email" name="email" required)
        .form-group
          label(for="password") Password
          input#password.form-control(type="password" name="password" required)
        button.btn.btn-default(type="submit") Sign Up
        a.btn.btn-primary(href="/twitter") Connect with Twitter
